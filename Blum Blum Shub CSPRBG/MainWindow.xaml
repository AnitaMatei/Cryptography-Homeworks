<Window x:Class="Blum_Blum_Shub_CSPRBG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blum_Blum_Shub_CSPRBG"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBoxFileSize" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="42,41,0,0"/>
        <Label Content="Size of generated file (MB):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,8,0,0"/>
        <CheckBox x:Name="checkBoxParameters" Content="Use random parameters" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,161,0,0" IsChecked="True" Click="checkBoxParameters_Click"/>
        <TextBox x:Name="textBoxQInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="42,209,0,0" IsEnabled="False"/>
        <TextBox x:Name="textBoxPInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="42,181,0,0" IsEnabled="False"/>
        <Label Content="q:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,205,0,0"/>
        <Label Content="p:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,178,0,0"/>
        <Button Content="Generate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="64,251,0,0" Click="Button_Click"/>
        <TextBox x:Name="textBoxErrors" HorizontalAlignment="Left" Height="201" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" RenderTransformOrigin="0.508,0.87" Margin="393,41,0,0"/>
        <Label Content="Errors:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="393,10,0,0"/>
        <TextBox x:Name="textBoxFolderInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="42,98,0,0"/>
        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="167,101,0,0" Click="SelectFolder"/>

    </Grid>
</Window>
